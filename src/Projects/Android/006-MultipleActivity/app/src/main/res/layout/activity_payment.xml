<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="org.csystem.android.app.multipleactivity.viewmodel.PaymentActivityViewModel"/>
        <import type="org.csystem.android.app.multipleactivity.viewmodel.LoginInfo"/>
        <import type="java.time.format.DateTimeFormatter"/>
        <variable name="viewModel" type="PaymentActivityViewModel"/>
        <variable name="loginInfo" type="LoginInfo"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PaymentActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{loginInfo.username}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{DateTimeFormatter.ofPattern(&quot;dd/MM/yyyy HH:mm::ss&quot;).format(loginInfo.loginDateTime)}"/>
        <!-- Burada, xml için escape sequence karakter olan &quot;'u ve binding yapılırken expression'da yazılabildiğini göstermek için ofPattern çağrılmıştır. Aslında DataTimeFormatter önceden yaratılıp burada kullanılabilir-->

        <!-- ...-->
    </LinearLayout>
</layout>
